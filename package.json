{
  "name": "surface-css",
  "version": "0.1.0",
  "author": {
    "name": "Harrison Ayan"
  },
  "description": "CSS framework",
  "main": "surface.scss",
  "license": "ISC",
  "keywords": [
    "css",
    "sass",
    "scss",
    "framework",
    "responsive"
  ],
  "scripts": {
    "build": "npm-run-all lint build:scss build:autoprefix build:cleancss",
    "build:autoprefix": "postcss --use autoprefixer --map false --output css/surface.css css/surface.css",
    "build:cleancss": "cleancss -o css/surface.min.css css/surface.css",
    "build:scss": "node-sass  --output-style expanded --source-map true surface.scss css/surface.css",
    "clean": "rimraf css",
    "lint": "stylelint \"**/*.{css,scss}\"",
    "watch": "npm-run-all --parallel watch:scss watch:html",
    "watch:scss": "nodemon --watch surface.scss --ext scss --exec \"npm-run-all build:scss\"",
    "watch:html": "live-server",
    "docs": "gulp serve",
    "docs:build": "gulp sassdoc"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.3",
    "browser-sync": "^2.27.5",
    "clean-css-cli": "^5.3.3",
    "gulp": "^4.0.2",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "sass": "^1.38.2",
    "sassdoc": "^2.7.3",
    "stylelint": "^13.13.1",
    "stylelint-config-twbs-bootstrap": "^2.2.3"
  },
  "files": [
    "css",
    "scss",
    "surface.scss"
  ]
}
